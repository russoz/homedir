<?xml version="1.0"?>
<metacity_theme>
<info>
  <name>Iris</name>
  <author>Florian Bachmann &lt;florian_bachmann@t-online.de&gt;</author>
  <copyright>Florian Bachmann, 2002</copyright>
  <date>February 8, 2002</date>
  <description>Clone of SGI's 4Dwm window manager for Irix</description>
</info>

<!-- define constants -->
<constant name="IconTitleSpacing" value="5" /> <!-- Space between menu button and title -->

<frame_geometry name="normal">
  <distance name="left_width" value="6"/>
  <distance name="right_width" value="6"/>
  <distance name="bottom_height" value="6"/>
  <distance name="left_titlebar_edge" value="6"/>
  <distance name="right_titlebar_edge" value="6"/>
  <aspect_ratio name="button" value="1.0"/>
  <distance name="title_vertical_pad" value="3"/>
  <border name="title_border" left="0" right="0" top="6" bottom="0"/>
  <border name="button_border" left="0" right="0" top="6" bottom="0"/>
</frame_geometry>


<!-- Panels -->
<draw_ops name="panel">
  <rectangle color="#838583" x="2" y="2" width="width-4" height="height-5" filled="true" />
  <line color="#cdcacd" x1="0" y1="0" x2="0" y2="height-3" />
  <line color="#cdcacd" x1="1" y1="0" x2="width-1" y2="0" />
  <line color="#acaaac" x1="1" y1="1" x2="1" y2="height-3" />
  <line color="#acaaac" x1="2" y1="1" x2="width-2" y2="1" />
  <line color="#313031" x1="0" y1="height-2" x2="width-2" y2="height-2" />
  <line color="#313031" x1="width-1" y1="1" x2="width-1" y2="height-2" />
  <line color="#686868" x1="2" y1="height-3" x2="width-2" y2="height-3" />
  <line color="#686868" x1="width-2" y1="2" x2="width-2" y2="height-4" />
  <line color="#000000" x1="0" y1="height-1" x2="width-1" y2="height-1" />
</draw_ops>
<draw_ops name="panel_pressed">
  <line color="#000000" x1="0" y1="0" x2="width-1" y2="0" />
  <line color="#313031" x1="0" y1="height-2" x2="0" y2="1" />
  <line color="#313031" x1="1" y1="1" x2="width-2" y2="1" />
  <line color="#686868" x1="1" y1="height-3" x2="1" y2="2" />
  <line color="#686868" x1="2" y1="2" x2="width-3" y2="2" />
  <line color="#cdcacd" x1="width-1" y1="1" x2="width-1" y2="height-1" />
  <line color="#cdcacd" x1="width-2" y1="height-1" x2="0" y2="height-1" />
  <line color="#acaaac" x1="width-2" y1="2" x2="width-2" y2="height-2" />
  <line color="#acaaac" x1="width-3" y1="height-2" x2="1" y2="height-2" />
  <rectangle color="#838583" x="2" y="3" width="width-4" height="height-5" filled="true" />
</draw_ops>
<draw_ops name="panel_focused">
  <rectangle color="#a49d83" x="2" y="2" width="width-4" height="height-5" filled="true" />
  <line color="#ded6cd" x1="0" y1="0" x2="0" y2="height-3" />
  <line color="#ded6cd" x1="1" y1="0" x2="width-1" y2="0" />
  <line color="#bdbaa4" x1="1" y1="1" x2="1" y2="height-3" />
  <line color="#bdbaa4" x1="2" y1="1" x2="width-2" y2="1" />
  <line color="#5a5541" x1="0" y1="height-2" x2="width-2" y2="height-2" />
  <line color="#5a5541" x1="width-1" y1="1" x2="width-1" y2="height-2" />
  <line color="#8e8873" x1="2" y1="height-3" x2="width-2" y2="height-3" />
  <line color="#8e8873" x1="width-2" y1="2" x2="width-2" y2="height-4" />
  <line color="#000000" x1="0" y1="height-1" x2="width-1" y2="height-1" />
</draw_ops>
<draw_ops name="panel_focused_pressed">
  <rectangle color="#a49d83" x="2" y="3" width="width-4" height="height-5" filled="true" />
  <line color="#000000" x1="0" y1="0" x2="width-1" y2="0" />
  <line color="#5a5541" x1="0" y1="1" x2="0" y2="height-2" />
  <line color="#5a5541" x1="1" y1="1" x2="width-2" y2="1" />
  <line color="#838873" x1="1" y1="2" x2="1" y2="height-3" />
  <line color="#838873" x1="2" y1="2" x2="width-3" y2="2" />
  <line color="#ded6cd" x1="width-1" y1="1" x2="width-1" y2="height-1" />
  <line color="#ded6cd" x1="width-2" y1="height-1" x2="0" y2="height-1" />
  <line color="#bdbaa4" x1="width-2" y1="2" x2="width-2" y2="height-2" />
  <line color="#bdbaa4" x1="width-3" y1="height-2" x2="1" y2="height-2" />
</draw_ops>


<!-- Window Border Pieces -->
<draw_ops name="border_horizontal">
  <line color="#000000" x1="0" y1="0" x2="width-1" y2="0" />
  <line color="#cdcacd" x1="0" y1="1" x2="width-1" y2="1" />
  <line color="#acaaac" x1="0" y1="2" x2="width-1" y2="2" />
  <line color="#686868" x1="0" y1="3" x2="width-1" y2="3" />
  <line color="#313031" x1="0" y1="4" x2="width-1" y2="4" />
  <line color="#000000" x1="0" y1="5" x2="width-1" y2="5" />
</draw_ops>
<draw_ops name="border_horizontal_focused">
  <line color="#000000" x1="0" y1="0" x2="width-1" y2="0" />
  <line color="#ded6cd" x1="0" y1="1" x2="width-1" y2="1" />
  <line color="#bdbaa4" x1="0" y1="2" x2="width-1" y2="2" />
  <line color="#8e8873" x1="0" y1="3" x2="width-1" y2="3" />
  <line color="#5a5541" x1="0" y1="4" x2="width-1" y2="4" />
  <line color="#000000" x1="0" y1="5" x2="width-1" y2="5" />
</draw_ops>
<draw_ops name="border_vertical">
  <line color="#000000" x1="0" y1="0" x2="0" y2="height-1" />
  <line color="#cdcacd" x1="1" y1="0" x2="1" y2="height-1" />
  <line color="#acaaac" x1="2" y1="0" x2="2" y2="height-1" />
  <line color="#686868" x1="3" y1="0" x2="3" y2="height-1" />
  <line color="#313031" x1="4" y1="0" x2="4" y2="height-1" />
  <line color="#000000" x1="5" y1="0" x2="5" y2="height-1" />
</draw_ops>
<draw_ops name="border_vertical_focused">
  <line color="#000000" x1="0" y1="0" x2="0" y2="height-1" />
  <line color="#ded6cd" x1="1" y1="0" x2="1" y2="height-1" />
  <line color="#bdbaa4" x1="2" y1="0" x2="2" y2="height-1" />
  <line color="#8e8873" x1="3" y1="0" x2="3" y2="height-1" />
  <line color="#5a5541" x1="4" y1="0" x2="4" y2="height-1" />
  <line color="#000000" x1="5" y1="0" x2="5" y2="height-1" />
</draw_ops>
<draw_ops name="border_top">
  <include name="border_horizontal" />
  <line color="#000000" x1="0" y1="1" x2="0" y2="height-1" />
  <line color="#cdcacd" x1="1" y1="2" x2="1" y2="height-1" />
  <line color="#acaaac" x1="2" y1="3" x2="2" y2="height-1" />
  <line color="#686868" x1="3" y1="4" x2="3" y2="height-1" />
  <line color="#313031" x1="4" y1="5" x2="4" y2="5" />
  <line color="#000000" x1="width-1" y1="0" x2="width-1" y2="height-1" />
  <line color="#313031" x1="width-2" y1="2" x2="width-2" y2="height-1" />
  <line color="#686868" x1="width-3" y1="2" x2="width-3" y2="height-1" />
  <line color="#acaaac" x1="width-4" y1="3" x2="width-4" y2="height-1" />
  <line color="#cdcacd" x1="width-5" y1="4" x2="width-5" y2="height-1" />
  <!-- Carvings -->
  <line color="#313031" x1="top_height-1" y1="1" x2="top_height-1" y2="height-2" />
  <line color="#cdcacd" x1="top_height" y1="1" x2="top_height" y2="height-2" />
  <line color="#313031" x1="width-top_height-1" y1="1" x2="width-top_height-1" y2="height-2" />
  <line color="#cdcacd" x1="width-top_height" y1="1" x2="width-top_height" y2="height-2" />
</draw_ops>
<draw_ops name="border_top_focused">
  <include name="border_horizontal_focused" />
  <line color="#000000" x1="0" y1="1" x2="0" y2="height-1" />
  <line color="#ded6cd" x1="1" y1="2" x2="1" y2="height-1" />
  <line color="#bdbaa4" x1="2" y1="3" x2="2" y2="height-1" />
  <line color="#8e8873" x1="3" y1="4" x2="3" y2="height-1" />
  <line color="#5a5541" x1="4" y1="5" x2="4" y2="5" />
  <line color="#000000" x1="width-1" y1="0" x2="width-1" y2="height-1" />
  <line color="#5a5541" x1="width-2" y1="2" x2="width-2" y2="height-1" />
  <line color="#8e8873" x1="width-3" y1="2" x2="width-3" y2="height-1" />
  <line color="#bdbaa4" x1="width-4" y1="3" x2="width-4" y2="height-1" />
  <line color="#ded6cd" x1="width-5" y1="4" x2="width-5" y2="height-1" />
  <!-- Carvings -->
  <line color="#5a5541" x1="top_height-1" y1="1" x2="top_height-1" y2="height-2" />
  <line color="#ded6cd" x1="top_height" y1="1" x2="top_height" y2="height-2" />
  <line color="#5a5541" x1="width-top_height-1" y1="1" x2="width-top_height-1" y2="height-2" />
  <line color="#ded6cd" x1="width-top_height" y1="1" x2="width-top_height" y2="height-2" />
</draw_ops>
<draw_ops name="border_bottom">
  <include name="border_horizontal" />
  <line color="#000000" x1="0" y1="0" x2="0" y2="height-1" />
  <line color="#cdcacd" x1="1" y1="0" x2="1" y2="height-2" />
  <line color="#acaaac" x1="2" y1="0" x2="2" y2="2" />
  <line color="#686868" x1="3" y1="0" x2="3" y2="1" />
  <line color="#313031" x1="4" y1="0" x2="4" y2="0" />
  <line color="#000000" x1="width-1" y1="0" x2="width-1" y2="height-1" />
  <line color="#313031" x1="width-2" y1="0" x2="width-2" y2="height-2" />
  <line color="#686868" x1="width-3" y1="0" x2="width-3" y2="height-3" />
  <line color="#acaaac" x1="width-4" y1="0" x2="width-4" y2="height-4" />
  <line color="#cdcacd" x1="width-5" y1="0" x2="width-5" y2="height-5" />
  <!-- Carvings -->
  <line color="#313031" x1="top_height-1" y1="1" x2="top_height-1" y2="height-2" />
  <line color="#cdcacd" x1="top_height" y1="1" x2="top_height" y2="height-2" />
  <line color="#313031" x1="width-top_height-1" y1="1" x2="width-top_height-1" y2="height-2" />
  <line color="#cdcacd" x1="width-top_height" y1="1" x2="width-top_height" y2="height-2" />
</draw_ops>
<draw_ops name="border_bottom_focused">
  <include name="border_horizontal_focused" />
  <line color="#000000" x1="0" y1="0" x2="0" y2="height-1" />
  <line color="#ded6cd" x1="1" y1="0" x2="1" y2="height-2" />
  <line color="#bdbaa4" x1="2" y1="0" x2="2" y2="2" />
  <line color="#8e8873" x1="3" y1="0" x2="3" y2="1" />
  <line color="#5a5541" x1="4" y1="0" x2="4" y2="0" />
  <line color="#000000" x1="width-1" y1="0" x2="width-1" y2="height-1" />
  <line color="#5a5541" x1="width-2" y1="0" x2="width-2" y2="height-2" />
  <line color="#8e8873" x1="width-3" y1="0" x2="width-3" y2="height-3" />
  <line color="#bdbaa4" x1="width-4" y1="0" x2="width-4" y2="height-4" />
  <line color="#ded6cd" x1="width-5" y1="0" x2="width-5" y2="height-5" />
  <!-- Carvings -->
  <line color="#5a5541" x1="top_height-1" y1="1" x2="top_height-1" y2="height-2" />
  <line color="#ded6cd" x1="top_height" y1="1" x2="top_height" y2="height-2" />
  <line color="#5a5541" x1="width-top_height-1" y1="1" x2="width-top_height-1" y2="height-2" />
  <line color="#ded6cd" x1="width-top_height" y1="1" x2="width-top_height" y2="height-2" />
</draw_ops>


<!-- Buttons -->
<draw_ops name="menu_button">
  <image filename="menu.png" x="(width-14)/2" y="(height-5)/2" width="14" height="5" />
</draw_ops>
<draw_ops name="menu_button_pressed">
  <image filename="menu.png" x="(width-14)/2+1" y="(height-5)/2+1" width="14" height="5" />
</draw_ops>
<draw_ops name="minimize_button">
  <image filename="minimize.png" x="(width-4)/2" y="(height-4)/2" width="4" height="4" />
</draw_ops>
<draw_ops name="minimize_button_pressed">
  <image filename="minimize.png" x="(width-4)/2+1" y="(height-4)/2+1" width="4" height="4" />
</draw_ops>
<draw_ops name="maximize_button">
  <image filename="maximize.png" x="(width-12)/2" y="(height-12)/2" width="12" height="12" />
</draw_ops>
<draw_ops name="maximize_button_pressed">
  <image filename="maximize.png" x="(width-12)/2+1" y="(height-12)/2+1" width="12" height="12" />
</draw_ops>
<draw_ops name="close_button">
  <image filename="close.png" x="(width-12)/2" y="(height-11)/2" width="12" height="11" />
</draw_ops>
<draw_ops name="close_button_pressed">
  <image filename="close.png" x="(width-12)/2+1" y="(height-11)/2+1" width="12" height="11" />
</draw_ops>


<!-- Inactive style -->
<frame_style name="normal" geometry="normal">
  <piece position="title">
    <draw_ops>
      <include name="panel" />
      <title color="black" x="IconTitleSpacing" y="(height-title_height)/2"/>
    </draw_ops>
  </piece>

  <!-- Top Edge -->
  <piece position="top_titlebar_edge">
    <draw_ops>
      <include name="border_top" />
    </draw_ops>
  </piece>

  <!-- Left/Right Edges -->
  <piece position="left_titlebar_edge">
    <draw_ops>
      <include name="border_vertical" />
      <line color="#313031" x1="1" y1="height-1" x2="width-2" y2="height-1" />
    </draw_ops>
  </piece>
  <piece position="left_edge">
    <draw_ops>
      <include name="border_vertical" />
      <line color="#cdcacd" x1="1" y1="0" x2="width-2" y2="0" />
      <line color="#313031" x1="1" y1="height-top_height+5" x2="width-2" y2="height-top_height+5" />
      <line color="#cdcacd" x1="1" y1="height-top_height+6" x2="width-2" y2="height-top_height+6" />
    </draw_ops>
  </piece>
  <piece position="right_titlebar_edge">
    <draw_ops>
      <include name="border_vertical" />
      <line color="#313031" x1="1" y1="height-1" x2="width-2" y2="height-1" />
    </draw_ops>
  </piece>
  <piece position="right_edge">
    <draw_ops>
      <include name="border_vertical" />
      <line color="#cdcacd" x1="1" y1="0" x2="width-2" y2="0" />
      <line color="#313031" x1="1" y1="height-top_height+5" x2="width-2" y2="height-top_height+5" />
      <line color="#cdcacd" x1="1" y1="height-top_height+6" x2="width-2" y2="height-top_height+6" />
    </draw_ops>
  </piece>

  <!-- Bottom Edge -->
  <piece position="bottom_edge">
    <draw_ops>
      <include name="border_bottom" />
    </draw_ops>
  </piece>

  <!-- Close Button -->
  <button function="close" state="normal">
    <draw_ops>
      <include name="panel" />
      <include name="close_button" />
    </draw_ops>
  </button>
  <button function="close" state="pressed">
    <draw_ops>
      <include name="panel_pressed" />
      <include name="close_button_pressed" />
    </draw_ops>
  </button>

  <!-- Minimize Button -->
  <button function="minimize" state="normal">
    <draw_ops>
      <include name="panel" />
      <include name="minimize_button" />
    </draw_ops>
  </button>
  <button function="minimize" state="pressed">
    <draw_ops>
      <include name="panel_pressed" />
      <include name="minimize_button_pressed" />
    </draw_ops>
  </button>

  <!-- Maximize Button -->
  <button function="maximize" state="normal">
    <draw_ops>
      <include name="panel" />
      <include name="maximize_button" />
    </draw_ops>
  </button>
  <button function="maximize" state="pressed">
    <draw_ops>
      <include name="panel_pressed" />
      <include name="maximize_button_pressed" />
    </draw_ops>
  </button>

  <!-- Menu Button -->
  <button function="menu" state="normal">
    <draw_ops>
      <include name="panel" />
      <include name="menu_button" />
    </draw_ops>
  </button>
  <button function="menu" state="pressed">
    <draw_ops>
      <include name="panel_pressed" />
      <include name="menu_button_pressed" />
    </draw_ops>
  </button>

</frame_style>


<!-- Active (focused) shaded style -->
<frame_style name="normal_shaded" geometry="normal" parent="normal">
</frame_style>

<!-- Active (focused) style -->
<frame_style name="focused" geometry="normal">
  <!-- Title -->
  <piece position="title">
    <draw_ops>
      <include name="panel_focused" />
      <title color="black" x="IconTitleSpacing" y="(height-title_height)/2"/>
