  <!-- Minimize Button -->
  <button function="minimize" state="normal">
    <draw_ops>
      <include name="panel_focused" />
      <include name="minimize_button" />
    </draw_ops>
  </button>
  <button function="minimize" state="pressed">
    <draw_ops>
      <include name="panel_focused_pressed" />
