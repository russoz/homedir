<frame_geometry name="normal" rounded_top_left="true" rounded_top_right="true">
  <distance name="left_width" value="9"/>
  <distance name="right_width" value="9"/>
  <distance name="bottom_height" value="9"/>
  <distance name="left_titlebar_edge" value="9"/>
  <distance name="right_titlebar_edge" value="9"/>
  <distance name="button_width" value="26"/>
  <distance name="button_height" value="23"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="8" right="8" top="2" bottom="0"/>
  <border name="button_border" left="0" right="0" top="2" bottom="1"/>
</frame_geometry>

<frame_geometry name="shaded" rounded_top_left="true" rounded_top_right="true">
  <distance name="left_width" value="9"/>
  <distance name="right_width" value="9"/>
  <distance name="bottom_height" value="9"/>
  <distance name="left_titlebar_edge" value="9"/>
  <distance name="right_titlebar_edge" value="9"/>
  <distance name="button_width" value="26"/>
  <distance name="button_height" value="23"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="8" right="8" top="2" bottom="0"/>
  <border name="button_border" left="0" right="0" top="2" bottom="1"/>
</frame_geometry>

<frame_geometry name="normal_maximized" rounded_top_left="false" rounded_top_right="false">
  <distance name="left_width" value="0"/>
  <distance name="right_width" value="0"/>
  <distance name="bottom_height" value="0"/>
  <distance name="left_titlebar_edge" value="0"/>
  <distance name="right_titlebar_edge" value="0"/>
  <distance name="button_width" value="26"/>
  <distance name="button_height" value="23"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="9" right="9" top="2" bottom="1"/>
  <border name="button_border" left="0" right="0" top="2" bottom="1"/>
</frame_geometry>

<draw_ops name="draw_title_tile">
  <image filename="title_l-active.png" x="0" y="0" width="object_width" height="height" />
  <image filename="title-active.png" fill_type="tile" x="9" y="0" width="width " height="height"/>
  <image filename="title_r-active.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_inactive">
  <image filename="title_l-inactive.png" x="0" y="0" width="object_width" height="height" />
  <image filename="title-inactive.png" fill_type="tile" x="9" y="0" width="width " height="height"/>
  <image filename="title_r-inactive.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_shaded">
  <image filename="title_l-active-sh.png" x="0" y="0" width="object_width" height="height" />
  <image filename="title-active-sh.png" fill_type="tile" x="9" y="0" width="width " height="height"/>
  <image filename="title_r-active-sh.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_inactive_shaded">
  <image filename="title_l-inactive-sh.png" x="0" y="0" width="object_width" height="height" />
  <image filename="title-inactive-sh.png" fill_type="tile" x="9" y="0" width="width " height="height"/>
  <image filename="title_r-inactive-sh.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_inactive_normal_maximized">
  <image filename="max-inactive.png" x="0" y="0" width="object_width" height="height" />
  <image filename="title-inactive.png" fill_type="tile" x="9" y="0" width="width " height="height"/>
  <image filename="max-inactive.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_normal_maximized">
  <image filename="title-active.png" fill_type="tile" x="0" y="0" width="width " height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_inactive_normal_maximized_shaded">
  <image filename="title-inactive-sh.png" fill_type="tile" x="0" y="0" width="width " height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_normal_maximized_shaded">
  <image filename="title-active-sh.png" fill_type="tile" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="left-active">
	<image filename="left-active.png" x="0" y="0" width="width" height="146"/>
	<image filename="left-active-bottom.png" x="0" y="146" width="width" height="height"/>
</draw_ops>

<draw_ops name="right-active">
	<image filename="right-active.png" x="0" y="0" width="width" height="146"/>
	<image filename="right-active-bottom.png" x="0" y="146" width="width" height="height"/>
</draw_ops>

<draw_ops name="left-inactive">
	<image filename="left-inactive.png" x="0" y="0" width="width" height="146"/>
	<image filename="left-inactive-bottom.png" x="0" y="146" width="width" height="height"/>

</draw_ops>

<draw_ops name="right-inactive">
	<image filename="right-inactive.png" x="0" y="0" width="width" height="146"/>
	<image filename="right-inactive-bottom.png" x="0" y="146" width="width" height="height"/>
</draw_ops>

<draw_ops name="bottom-active">
	<image filename="bottom-l-active.png" x="0" y="0" width="9" height="9"/>
	<image filename="bottom-active.png" x="9" y="0" width="width" height="height"/>
	<image filename="bottom-r-active.png" x="width-9" y="0" width="9" height="9"/>
</draw_ops>
<draw_ops name="bottom-inactive">
	<image filename="bottom-l-inactive.png" x="0" y="0" width="9" height="9"/>
	<image filename="bottom-inactive.png" x="9" y="0" width="width" height="height"/>
	<image filename="bottom-r-inactive.png" x="width-9" y="0" width="9" height="9"/>
</draw_ops>

<draw_ops name="draw_title_pill">
  <title color="#000000" x="1" y="(height - title_height) / 2 - 1"/>
  <title color="#9dbed0" x="0" y="(height - title_height) / 2 - 2"/>         
</draw_ops>

<draw_ops name="draw_title_pill_inactive">
  <title color="#000000" x="1" y="(height - title_height) / 2 - 1"/>
  <title color="#525252" x="0" y="(height - title_height) / 2 - 2"/>
</draw_ops>

<draw_ops name="bg">
   <rectangle color="#EFEFEF" x="0" y="0" width="width" height="height" filled="true"/>
   <rectangle color="#919191" x="0" y="0" width="width-1" height="height-1" filled="false"/>
</draw_ops>

<draw_ops name="bg-i">
   <rectangle color="#EFEFEF" x="0" y="0" width="width" height="height" filled="true"/>
   <rectangle color="#B7B7B7" x="0" y="0" width="width-1" height="height-1" filled="false"/>
</draw_ops>

<draw_ops name="draw_close_button">
   <image filename="close.png" x="0" y="1" width="19" height="19"/>
</draw_ops>
<draw_ops name="draw_min_button">
   <image filename="min.png" x="0" y="2" width="19" height="19"/>
</draw_ops>
<draw_ops name="draw_max_button">
   <image filename="max.png" x="0" y="1" width="19" height="19"/>
</draw_ops>


<draw_ops name="draw_close_prelight_button">
   <image filename="close_pre.png" x="0" y="1" width="19" height="19"/>
</draw_ops>
<draw_ops name="draw_min_prelight_button">
   <image filename="min_pre.png" x="0" y="2" width="19" height="19"/>
</draw_ops>
<draw_ops name="draw_max_prelight_button">
   <image filename="max_pre.png" x="0" y="1" width="19" height="19"/>
</draw_ops>


<draw_ops name="draw_close_pressed_button">
   <image filename="close_press.png" x="0" y="1" width="19" height="19"/>
</draw_ops>
<draw_ops name="draw_min_pressed_button">
   <image filename="min_press.png" x="0" y="2" width="19" height="19"/>
</draw_ops>
<draw_ops name="draw_max_pressed_button">
   <image filename="max_press.png" x="0" y="1" width="19" height="19"/>
</draw_ops>


<draw_ops name="draw_close_inactive_button">
   <image filename="close_inac.png" x="0" y="1" width="19" height="19"/>
</draw_ops>
<draw_ops name="draw_min_inactive_button">
   <image filename="min_inac.png" x="0" y="2" width="19" height="19"/>
</draw_ops>
<draw_ops name="draw_max_inactive_button">
   <image filename="max_inac.png" x="0" y="1" width="19" height="19"/>
</draw_ops>


<draw_ops name="draw_close_inactive_prelight_button">
   <image filename="close.png" x="0" y="1" width="19" height="19"/>
</draw_ops>
